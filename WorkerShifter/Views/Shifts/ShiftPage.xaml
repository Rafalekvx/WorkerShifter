<?xml version="1.0" encoding="utf-8" ?>
    
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             xmlns:viewmodel="clr-namespace:WorkerShifter.ViewModels.ShiftsViewModels"
             xmlns:behaviors="clr-namespace:WorkerShifter.Behaviors"
             x:Class="WorkerShifter.Views.Shifts.ShiftPage"
             x:DataType="viewmodel:ShiftPageViewModel"
             Title="ShiftPage">
    

    <VerticalStackLayout>
        <calendar:SfCalendar View="Month" AllowViewNavigation="False">
            <calendar:SfCalendar.Behaviors>
                <behaviors:CalendarBehavior></behaviors:CalendarBehavior>
            </calendar:SfCalendar.Behaviors>
        </calendar:SfCalendar>
        
    </VerticalStackLayout>
</ContentPage>